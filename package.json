{
  "name": "remote-file-explorer",
  "displayName": "Remote File Explorer",
  "description": "Explore remote files visually in VS Code â€” finally, an \"Open Containing Folder\" that works over SSH!",
  "publisher": "SaswatMeher",
  "version": "0.2.0",
  "icon": "assets/extention_icon.png",
  "repository": "https://github.com/saswatmeher/remote-file-explorer",
  "engines": {
    "vscode": "^1.37.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:remoteFileExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "remoteFileExplorer.openInremoteFileExplorer",
        "title": "Open in Remote File Explorer"
      },
      {
        "command": "remoteFileExplorer.openInRemoteContainingFolder",
        "title": "Open Containing Remote Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "remoteFileExplorer.openInremoteFileExplorer",
          "when": "explorerResourceIsFolder",
          "group": "remoteFileExplorer@1"
        },
        {
          "command": "remoteFileExplorer.openInRemoteContainingFolder",
          "group": "remoteFileExplorer@2"
        }
      ],
      "editor/title/context": [
        {
          "command": "remoteFileExplorer.openInRemoteContainingFolder",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.37.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
